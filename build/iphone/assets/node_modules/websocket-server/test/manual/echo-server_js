var sys=require("sys"),ws=require("../../lib/ws/server"),server=ws.createServer({debug:!0});server.addListener("connection",function(e){e.send("Connection: "+e.id),e.addListener("message",function(t){e.send("<"+e.id+"> "+t),"error"==t&&e.emit("error","test")})}),server.addListener("error",function(){console.log(Array.prototype.join.call(arguments,", "))}),server.addListener("disconnected",function(e){server.broadcast("<"+e.id+"> disconnected")}),server.listen(8e3);